<div class="toggles">
  <button class="selected timerange-button" id="week-button">Hafta</button>
  <button class="timerange-button" id="month-button">Ay</button>
  <button class="timerange-button" id="infinity-button">Sonsuz</button>
</div>

<div class="summary-stats">
  <div class="card" id="readers-card"></div>
  <div class="card" id="reactions-card"></div>
  <div class="card" id="comments-card"></div>
  <div class="card" id="followers-card"></div>
</div>

<div class="graphs">
  <div class="row">
    <div class="card">
      <h2>Okuyucu Özeti</h2>
      <div class="charts-container">
        <canvas id="readers-chart"></canvas>
      </div>
    </div>
    <div class="card">
      <h2>Yeni Takipçi Özeti</h2>
      <div class="charts-container">
        <canvas id="followers-chart"></canvas>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="card">
      <h2>Tepki Özeti ❤🦄🔖</h2>
      <div class="charts-container">
        <canvas id="reactions-chart"></canvas>
      </div>
    </div>
    <div class="card">
      <h2>Yorum Özeti 💬</h2>
      <div class="charts-container">
        <canvas id="comments-chart"></canvas>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="card">
      <h2>Trafik Özeti 🚦</h2>
      <table>
        <thead>
          <tr>
            <th>Kaynak</th>
            <th>Görüntüleme</th>
          </tr>
        </thead>

        <tbody id="referrers-container">
        </tbody>
      </table>
    </div>
  </div>
</div>
