<div class="crayons-dropdown left-2 right-2 s:left-auto p-0 top-bar__menu__dropdown">
  <% if user_signed_in? %>
    <div id="user-profile-link-placeholder" class="border-0 border-b-1 border-solid border-base-20 p-1">
      <a id="first-nav-link" class="crayons-link crayons-link--block">
        <div>
          <span class="fw-medium block">...</span>
          <small class="fs-s color-base-50"></small>
        </div>
      </a>
    </div>

    <div class="border-0 border-b-1 border-solid border-base-20 p-1">
      <a href="<%= dashboard_path %>" class="crayons-link crayons-link--block">Panel</a>
      <a href="<%= new_path %>" class="crayons-link crayons-link--block">Gönderi Yaz</a>
      <a href="<%= readinglist_path %>" class="crayons-link crayons-link--block">Okuma listesi</a>
      <a href="<%= user_settings_path %>" class="crayons-link crayons-link--block">Ayarlar</a>
      <a href="<%= information_path %>" class="crayons-link crayons-link--block" id="second-last-nav-link">Önemli Linkler</a>
    </div>
    <div class="p-1">
      <a href="<%= signout_confirm_path %>" class="crayons-link crayons-link--block" id="last-nav-link">Çıkış Yap</a>
    </div>
  <% else %>
    <div class="border-0 border-b-1 border-solid border-base-20 p-2 grid gap-2">
      <% if any_selfserve_auth? %>
        <%= render partial: "shared/authentication/providers_nav_menu" %>
        <a
          href="/enter"
          class="crayons-btn crayons-btn--secondary">
          Diğer Oturum Açma Seçenekleri
        </a>
      <% else %>
        <a
          href="/enter"
          class="crayons-btn crayons-btn--secondary">
          Giriş
        </a>
      <% end %>
    </div>
    <div class="p-1">
      <a href="<%= information_path %>" class="crayons-link crayons-link--block" id="last-nav-link"><%= community_name %> hakkında herşey</a>
    </div>
  <% end %>
</div>
